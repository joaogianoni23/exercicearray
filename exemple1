//Criei uma lista de números por ordem aleatoria
const numbersList = [4, 5, 7, 8, 2];
//Mandei ordenar os números do menor para o maior (o comando .sort ordena os elementos array)
const orderedList = numbersList.sort((a, b) => {
	if(a < b){
        return -1;
     } else if(a > b){
         return 1;
     }
     return 0;
})

console.log (numbersList)



const usersList = [
	{name: 'João', credit: 600},
	{name: 'Maria', credit: 900},
	{name: 'Carlos', credit: 300},
	{name: 'Vanessa', credit: 200},
];

const orderedUsers = usersList.sort((a, b) => a.credit - b.credit);

